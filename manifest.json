{
  "manifest_version": 2,

  "name": "Recently Visited Bookmarks",
  "description": "Your most recently viewed bookmarks move to the top.",
  "version": "1.0",

  "background": {
    "scripts": [
      "shared/util.js",
      "background/bookmarkOrderUpdate.js",
      "background/browserAction.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Recently Viewed Bookmarks"
  },

  "options_page": "options/options.html",

  "permissions": [
    "storage",
    "tabs",
    "bookmarks"
  ]
}
