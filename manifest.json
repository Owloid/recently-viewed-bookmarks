{
  "manifest_version": 2,

  "name": "Recently Visited Bookmarks",
  "description": "This extension shows your most recently visited bookmarks",
  "version": "1.0",

  "background": {
    "scripts": [
      "bookmarkOrderUpdate.js",
      "browserAction.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "white-square.png",
    "default_title": "Recently Viewed Bookmarks Settings"
  },

  "options_page": "options.html",

  "permissions": [
    "tabs",
    "bookmarks"
  ]
}
